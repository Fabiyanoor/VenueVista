@page "/bookings"
@using MyApp.Shared.Dtos.Booking
@using System.Security.Claims
@inject IBookingService BookingService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@layout UserLayout

@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<div class="h-full bg-gray-50 p-4 pt-16 md:p-6 md:pt-6">
    <div class="mx-auto max-w-7xl">

        <div class="mb-8 flex flex-col items-start justify-between gap-4 border-b border-gray-200 pb-4 md:flex-row md:items-center">
            <h1 class="text-3xl font-bold text-[#3e2c24]">
                Hello, @userName!
            </h1>

            <NavLink href="/Menu" class="inline-block rounded-lg bg-[#a0522d] px-6 py-3 text-center text-white shadow-md transition-colors hover:bg-[#d2a679] focus:ring-2 focus:ring-[#d2a679] focus:outline-none">
                ✨ Book a New Venue
            </NavLink>
        </div>

        <div class="animate-fade-in mb-6 flex flex-col items-start justify-between gap-4 md:flex-row md:items-center">
            <h2 class="text-2xl font-semibold text-[#3e2c24]">Your Past Bookings</h2>
        </div>

        <div class="animate-fade-in mb-6 flex flex-col gap-4 md:flex-row md:items-center">
            <label class="text-sm font-medium text-gray-700">Start Date:</label>
            <input type="date" @bind="startDate" class="w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-[#a0522d] focus:outline-none md:w-auto" />
            <label class="text-sm font-medium text-gray-700">End Date:</label>
            <input type="date" @bind="endDate" class="w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-[#a0522d] focus:outline-none md:w-auto" />
            <button @onclick="LoadBookings" class="w-full rounded-md bg-[#a0522d] px-4 py-2 text-white transition-colors hover:bg-[#d2a679] focus:ring-2 focus:ring-[#d2a679] focus:outline-none md:w-auto">
                Filter
            </button>
            <button @onclick="ClearFilter" class="w-full rounded-md bg-gray-300 px-4 py-2 text-gray-800 transition-colors hover:bg-gray-400 focus:ring-2 focus:ring-gray-400 focus:outline-none md:w-auto">
                Clear
            </button>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="animate-fade-in mb-4 rounded-md border border-red-200 bg-red-50 p-3">
                <p class="text-sm text-red-600">@errorMessage</p>
            </div>
        }

        @if (bookings == null)
        {
            <div class="rounded-lg bg-white p-4 text-center text-sm text-gray-800 shadow-md">Loading...</div>
        }
        else if (!bookings.Any())
        {
            <div class="rounded-lg bg-white p-4 text-center text-sm text-gray-800 shadow-md">No bookings found.</div>
        }
        else
        {
            <div class="animate-slide-up hidden overflow-x-auto rounded-lg bg-white shadow-md sm:block">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-[#f5e6d3]">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Venue</th>
                            <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Start Time</th>
                            <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">End Time</th>
                            <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Total Cost</th>
                            <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Status</th>
                            <th scope="col" class="px-6 py-3 text-right text-sm font-semibold text-[#3e2c24]">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var booking in bookings)
                        {
                            <tr class="transition-colors hover:bg-gray-50">
                                <td class="px-6 py-4 text-sm font-medium text-gray-800">@booking.VenueName</td>
                                <td class="px-6 py-4 text-sm text-gray-800">@booking.StartTime.ToString("g")</td>
                                <td class="px-6 py-4 text-sm text-gray-800">@booking.EndTime.ToString("g")</td>
                                <td class="px-6 py-4 text-sm font-semibold text-gray-800">$@booking.TotalCost.ToString("F2")</td>
                                <td class="px-6 py-4 text-sm text-gray-800">
                                    <span class="@GetStatusBadgeClass(booking.Status)">@booking.Status</span>
                                </td>
                                <td class="px-6 py-4 text-right text-sm font-medium">
                                    <div class="flex justify-end gap-3">
                                        <button @onclick="() => NavigateToViewBooking(booking.Id)" class="text-[#a0522d] hover:text-[#3e2c24]" title="View">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </button>
                                        @if (booking.Status != "Canceled")
                                        {
                                            <button @onclick="() => CancelBooking(booking.Id)" class="text-red-600 hover:text-red-800" title="Cancel">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                </svg>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="animate-slide-up space-y-4 sm:hidden">
                @foreach (var booking in bookings)
                {
                    <div class="rounded-lg border-l-4 border-[#a0522d] bg-white p-4 shadow-md transition-shadow hover:shadow-lg">
                        <div class="space-y-2">
                            <div class="flex items-center justify-between">
                                <p class="truncate text-lg font-bold text-gray-900">@booking.VenueName</p>
                                <span class="@GetStatusBadgeClass(booking.Status)">@booking.Status</span>
                            </div>
                            <div class="grid grid-cols-2 text-sm text-gray-600">
                                <div><span class="font-medium text-gray-700">Start:</span> @booking.StartTime.ToString("g")</div>
                                <div class="text-right"><span class="font-medium text-gray-700">End:</span> @booking.EndTime.ToString("g")</div>
                            </div>
                            <div class="border-t border-gray-100 pt-2">
                                <p class="text-base font-semibold text-[#a0522d]">Total Cost: $@booking.TotalCost.ToString("F2")</p>
                            </div>
                        </div>
                        <div class="mt-4 flex justify-between border-t border-gray-100 pt-3">
                            <button @onclick="() => NavigateToViewBooking(booking.Id)" class="flex items-center text-[#a0522d] hover:text-[#3e2c24] text-sm font-medium" title="View Details">
                                <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                                View
                            </button>
                            @if (booking.Status != "Canceled")
                            {
                                <button @onclick="() => CancelBooking(booking.Id)" class="flex items-center text-red-600 hover:text-red-800 text-sm font-medium" title="Cancel Booking">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                                    Cancel
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>


@code {

    private List<BookingWithUserDto> bookings = null;

    private string errorMessage = string.Empty;

    private DateTime? startDate;

    private DateTime? endDate;

    private Guid userId = Guid.Empty;

    // New property to hold the user's name

    private string userName = "User";



    protected override async Task OnInitializedAsync()

    {

        await LoadUserInfo();

        await LoadBookings();

    }



    private async Task LoadUserInfo()

    {

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();

        var user = authState.User;

        if (user.Identity.IsAuthenticated)

        {

            // Get User ID

            userId = Guid.Parse(user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? Guid.Empty.ToString());



            // Get User Name (using Name, but could use another claim like 'givenname' or a custom claim)

            // Fallback to the default "User" if Name is null

            userName = user.FindFirst(ClaimTypes.Name)?.Value ?? "User";

        }

    }



    private async Task LoadBookings()

    {

        try

        {

            MethodResult<List<BookingWithUserDto>> result;

            if (startDate.HasValue && endDate.HasValue && startDate.Value < endDate.Value)

            {

                result = await BookingService.GetBookingsByUserIdAndDateRangeAsync(userId, startDate.Value, endDate.Value);

            }

            else

            {

                result = await BookingService.GetBookingsByUserIdAsync(userId);

            }

            if (result.IsSuccess)

            {

                bookings = result.Data;

            }

            else

            {

                errorMessage = result.Error;

                bookings = new List<BookingWithUserDto>();

            }

        }

        catch (Exception ex)

        {

            errorMessage = $"Failed to load bookings: {ex.Message}";

            bookings = new List<BookingWithUserDto>();

        }

        StateHasChanged();

    }



    private async Task CancelBooking(Guid bookingId)

    {

        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to cancel this booking?");

        if (!confirm) return;

        try

        {

            var result = await BookingService.CancelBookingAsync(bookingId);

            if (result.IsSuccess)

            {

                await LoadBookings();

            }

            else

            {

                errorMessage = result.Error;

            }

        }

        catch (Exception ex)

        {

            errorMessage = $"Failed to cancel booking: {ex.Message}";

        }

        StateHasChanged();

    }



    private void NavigateToViewBooking(Guid bookingId)

    {

        NavigationManager.NavigateTo($"/user/bookings/{bookingId}");

    }



    private void ClearFilter()

    {

        startDate = null;

        endDate = null;

        LoadBookings();

    }



    private string GetStatusBadgeClass(string status)

    {

        return status?.ToLower() switch

        {

            "confirmed" => "inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800",

            "pending" => "inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800",

            "canceled" => "inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800",

            _ => "inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800"

        };

    }

}