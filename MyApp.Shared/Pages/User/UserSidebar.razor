@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Navigation


<div class="fixed top-0 left-0 z-40 h-screen w-64 transform bg-[#3e2c24] text-white
             shadow-lg transition-transform duration-300 ease-in-out
             md:translate-x-0
             @(IsOpen ? "translate-x-0" : "-translate-x-full")"
     aria-modal="@(IsOpen ? "true" : "false")"
     role="dialog"
     tabindex="-1"
     aria-label="Navigation Sidebar">

    <div class="h-full w-full" @onclick:stopPropagation>
        <div class="p-4">
            <h2 class="cursor-pointer text-2xl font-bold text-[#f5e6d3] hover:text-[#d2a679]"
                @onclick="@(() => Navigation.NavigateTo("/"))">
                Venue Booking
            </h2>
        </div>
        <!-- User Info Section -->
        <div class="border-b border-[#a0522d] px-4 py-3">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[#f5e6d3]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-white">@userName</p>
                </div>
            </div>
        </div>

        <nav class="mt-4">
            <ul class="space-y-2">
                <li>
                    <NavLink href="/user/profile" class="flex items-center px-4 py-2 text-[#f5e6d3] transition-colors duration-200 hover:bg-[#a0522d] hover:text-white" ActiveClass="bg-[#a0522d] text-white">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        Profile
                    </NavLink>
                </li>
                <li>
                    <NavLink href="/bookings" class="flex items-center px-4 py-2 text-[#f5e6d3] transition-colors duration-200 hover:bg-[#a0522d] hover:text-white" ActiveClass="bg-[#a0522d] text-white">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3M3 11h18M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Bookings
                    </NavLink>
                </li>
             
                
            </ul>
        </nav>
        <div class="absolute bottom-0 w-full p-4">
            @if (_isLoggedIn)
            {
                <button @onclick="LogoutAsyc" @onclick:stopPropagation class="flex w-full items-center rounded bg-[#a0522d] px-4 py-2 text-white transition-colors duration-200 hover:bg-[#d2a679]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Logout
                </button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private bool _isLoggedIn = false;
    private string userName = "User";

    [CascadingParameter]
    public Task<AuthenticationState> AuthStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateTask;
        _isLoggedIn = authState.User.Identity?.IsAuthenticated ?? false;

        // Get user name from authentication state
        if (_isLoggedIn)
        {
            userName = authState.User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "User";
        }
    }

    private void LogoutAsyc() => Navigation.NavigateTo("/auth/logout", replace: true, forceLoad: true);
}