@page "/user/profile"
@using MyApp.Shared.Dtos.User
@using MyApp.Shared.Dtos.Booking
@using System.Security.Claims
@inject IUserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@layout UserLayout
@attribute [Authorize]

<div class="bg-gray-50 p-4 sm:p-6">
    <div class="mx-auto max-w-full sm:max-w-4xl lg:max-w-7xl">
        <!-- Header -->
        <div class="animate-fade-in mb-6 flex flex-col items-start justify-between gap-4 border-b border-gray-200 pb-4 sm:flex-row sm:items-center">
            <h1 class="text-2xl font-bold text-[#3e2c24] sm:text-3xl">My Profile</h1>
        </div>
        <!-- Error and Success Messages -->
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="animate-fade-in mb-4 rounded-md border border-red-200 bg-red-50 p-3">
                <p class="text-sm text-red-600">@errorMessage</p>
            </div>
        }
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="animate-fade-in mb-4 rounded-md border border-green-200 bg-green-50 p-3">
                <p class="text-sm text-green-600">@successMessage</p>
            </div>
        }
        <!-- Loading State -->
        @if (user == null)
        {
            <div class="flex items-center justify-center py-8">
                <svg class="h-6 w-6 animate-spin text-[#3e2c24] sm:h-8 sm:w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </div>
        }
        else
        {
            <!-- Profile Details and Edit Form -->
            <div class="grid grid-cols-1 gap-6 sm:gap-8 lg:grid-cols-3">
                <!-- Profile Details -->
                <div class="animate-slide-up rounded-2xl bg-white p-4 shadow-md sm:p-8 lg:col-span-2">
                    <h2 class="mb-4 text-xl font-semibold text-[#3e2c24] sm:mb-6 sm:text-2xl">Profile Information</h2>
                    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Name</dt>
                            <dd class="mt-1 text-base text-gray-900 sm:text-lg">@user.Name</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Email</dt>
                            <dd class="mt-1 text-base text-gray-900 sm:text-lg">@user.Email</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Contact Number</dt>
                            <dd class="mt-1 text-base text-gray-900 sm:text-lg">@(string.IsNullOrWhiteSpace(user.ContactNumber) ? "Not provided" : user.ContactNumber)</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Role</dt>
                            <dd class="mt-1 text-base text-gray-900 sm:text-lg">@user.Role</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Joined</dt>
                            <dd class="mt-1 text-base text-gray-900 sm:text-lg">@user.CreatedAt.ToString("MMM dd, yyyy")</dd>
                        </div>
                    </dl>
                    <div class="mt-4 sm:mt-6">
                        <button @onclick="ToggleEditMode" class="w-full rounded-md bg-[#a0522d] px-4 py-2 text-sm text-white hover:bg-[#d2a679] focus:ring-2 focus:ring-[#d2a679] focus:outline-none sm:w-auto sm:px-6 sm:py-3 sm:text-base">
                            @(isEditing ? "Cancel" : "Edit Profile")
                        </button>
                    </div>
                </div>
                <!-- Edit Form -->
                @if (isEditing)
                {
                    <div class="animate-slide-up rounded-2xl bg-white p-4 shadow-md sm:p-8 lg:col-span-1">
                        <h2 class="mb-4 text-xl font-semibold text-[#3e2c24] sm:mb-6 sm:text-2xl">Update Profile</h2>
                        <div class="space-y-4">
                            <div>
                                <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                                <input id="name" type="text" @bind="updateModel.Name" class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-[#a0522d] focus:outline-none sm:px-4" />
                            </div>
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                                <input id="email" type="email" @bind="updateModel.Email" class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-[#a0522d] focus:outline-none sm:px-4" />
                            </div>
                            <div>
                                <label for="contactNumber" class="block text-sm font-medium text-gray-700">Contact Number</label>
                                <input id="contactNumber" type="tel" @bind="updateModel.ContactNumber" class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-[#a0522d] focus:outline-none sm:px-4" />
                            </div>
                            <div class="flex justify-end gap-3">
                                <button @onclick="ToggleEditMode" class="w-full rounded-md border border-gray-300 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 sm:w-auto sm:px-6 sm:text-base">Cancel</button>
                                <button @onclick="UpdateProfile" disabled="@isSubmitting" class="w-full rounded-md bg-[#a0522d] px-4 py-2 text-sm text-white hover:bg-[#d2a679] disabled:opacity-50 sm:w-auto sm:px-6 sm:text-base">
                                    @if (isSubmitting)
                                    {
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <span>Save Changes</span>
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Booking History -->
            <div class="animate-slide-up mt-6 rounded-2xl bg-white p-4 shadow-md sm:mt-8 sm:p-8">
                <h2 class="mb-4 text-xl font-semibold text-[#3e2c24] sm:mb-6 sm:text-2xl">Booking History</h2>
                <!-- Table for larger screens -->
                <div class="hidden overflow-x-auto sm:block">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-[#f5e6d3]">
                            <tr>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-[#3e2c24] sm:px-6 sm:text-sm">Venue</th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-[#3e2c24] sm:px-6 sm:text-sm">Start Time</th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-[#3e2c24] sm:px-6 sm:text-sm">End Time</th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-[#3e2c24] sm:px-6 sm:text-sm">Total Cost</th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-[#3e2c24] sm:px-6 sm:text-sm">Status</th>
                                <th scope="col" class="px-4 py-3 text-right text-xs font-semibold text-[#3e2c24] sm:px-6 sm:text-sm">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            @if (user.Bookings == null)
                            {
                                <tr>
                                    <td colspan="6" class="px-4 py-4 text-center text-sm text-gray-800 sm:px-6">Loading...</td>
                                </tr>
                            }
                            else if (!user.Bookings.Any())
                            {
                                <tr>
                                    <td colspan="6" class="px-4 py-4 text-center text-sm text-gray-800 sm:px-6">No bookings found.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var booking in user.Bookings)
                                {
                                    <tr class="transition-colors hover:bg-gray-50">
                                        <td class="px-4 py-4 text-sm text-gray-800 sm:px-6">@booking.VenueName</td>
                                        <td class="px-4 py-4 text-sm text-gray-800 sm:px-6">@booking.StartTime.ToString("g")</td>
                                        <td class="px-4 py-4 text-sm text-gray-800 sm:px-6">@booking.EndTime.ToString("g")</td>
                                        <td class="px-4 py-4 text-sm text-gray-800 sm:px-6">$@booking.TotalCost.ToString("F2")</td>
                                        <td class="px-4 py-4 text-sm text-gray-800 sm:px-6">
                                            <span class="@GetStatusBadgeClass(booking.Status)">@booking.Status</span>
                                        </td>
                                        <td class="px-4 py-4 text-right text-sm font-medium sm:px-6">
                                            <button @onclick="() => NavigateToBookingDetails(booking.Id)" class="text-[#a0522d] hover:text-[#3e2c24]" title="View">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                                </svg>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Card layout for mobile -->
                <div class="space-y-4 sm:hidden">
                    @if (user.Bookings == null)
                    {
                        <div class="rounded-lg bg-white p-4 text-center text-sm text-gray-800 shadow-md">Loading...</div>
                    }
                    else if (!user.Bookings.Any())
                    {
                        <div class="rounded-lg bg-white p-4 text-center text-sm text-gray-800 shadow-md">No bookings found.</div>
                    }
                    else
                    {
                        @foreach (var booking in user.Bookings)
                        {
                            <div class="rounded-lg border-l-4 border-[#a0522d] bg-white p-4 shadow-md transition-shadow hover:shadow-lg">
                                <div class="flex flex-col space-y-2">
                                    <p class="text-base font-bold text-gray-900 sm:text-lg">@booking.VenueName</p>
                                    <p class="text-sm text-gray-500">Start: @booking.StartTime.ToString("g")</p>
                                    <p class="text-sm text-gray-500">End: @booking.EndTime.ToString("g")</p>
                                    <p class="text-sm font-semibold text-[#a0522d] sm:text-base">$@booking.TotalCost.ToString("F2")</p>
                                    <p class="text-sm text-gray-500">
                                        <span class="@GetStatusBadgeClass(booking.Status)">@booking.Status</span>
                                    </p>
                                </div>
                                <div class="mt-4 flex justify-end border-t border-gray-100 pt-3">
                                    <button @onclick="() => NavigateToBookingDetails(booking.Id)" class="flex items-center text-[#a0522d] hover:text-[#3e2c24] text-sm font-medium" title="View">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                        View
                                    </button>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    .animate-slide-up {
        animation: slideUp 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>

@code {
    private UserDetailsDto user;
    private UpdateUserDto updateModel = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isEditing = false;
    private bool isSubmitting = false;
    private Guid userId = Guid.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserInfo();
        await LoadUserProfile();
    }

    private async Task LoadUserInfo()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var authUser = authState.User;
        if (authUser.Identity.IsAuthenticated)
        {
            userId = Guid.Parse(authUser.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? Guid.Empty.ToString());
        }
        else
        {
            errorMessage = "You must be logged in to view your profile.";
            NavigationManager.NavigateTo("/auth/login");
        }
    }

    private async Task LoadUserProfile()
    {
        try
        {
            var result = await UserService.GetUserDetailsAsync(userId);
            if (result.IsSuccess)
            {
                user = result.Data;
                updateModel.Name = user.Name;
                updateModel.Email = user.Email;
                updateModel.ContactNumber = user.ContactNumber;
            }
            else
            {
                errorMessage = result.Error;
                user = null;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load profile: {ex.Message}";
            user = null;
        }
        StateHasChanged();
    }

    private void ToggleEditMode()
    {
        isEditing = !isEditing;
        if (!isEditing)
        {
            updateModel.Name = user.Name;
            updateModel.Email = user.Email;
            updateModel.ContactNumber = user.ContactNumber;
            errorMessage = string.Empty;
            successMessage = string.Empty;
        }
        StateHasChanged();
    }

    private async Task UpdateProfile()
    {
        isSubmitting = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;
        try
        {
            var result = await UserService.UpdateUserAsync(userId, updateModel);
            if (result.IsSuccess)
            {
                successMessage = "Profile updated successfully!";
                await LoadUserProfile(); // Refresh user data
                isEditing = false;
            }
            else
            {
                errorMessage = result.Error;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to update profile: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void NavigateToBookingDetails(Guid bookingId)
    {
        NavigationManager.NavigateTo($"/user/bookings/{bookingId}");
    }

    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "confirmed" => "inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800",
            "pending" => "inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800",
            "canceled" => "inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800",
            _ => "inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }
}