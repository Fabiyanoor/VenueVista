@page "/users"
@using MyApp.Shared.Dtos.User
@layout AdminLayout
@inject IUserService UserService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="min-h-screen bg-gray-50 p-4 sm:p-6">
    <div class="mx-auto max-w-7xl">
        <div class="animate-fade-in mb-6 flex flex-col items-start justify-between gap-4 md:flex-row md:items-center">
            <h1 class="text-3xl font-bold text-gray-900">Users</h1>
        </div>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="animate-fade-in mb-4 rounded-md border border-red-200 bg-red-50 p-3">
                <p class="text-sm text-red-600">@errorMessage</p>
            </div>
        }
        <div class="animate-slide-up hidden overflow-x-auto rounded-lg bg-white shadow-md sm:block">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-[#f5e6d3]">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Name</th>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Email</th>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Contact Number</th>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Role</th>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-[#3e2c24]">Joined</th>
                        <th scope="col" class="px-6 py-3 text-right text-sm font-semibold text-[#3e2c24]">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (users == null)
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-800">Loading...</td>
                        </tr>
                    }
                    else if (!users.Any())
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-800">No users found.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in users)
                        {
                            <tr class="transition-colors hover:bg-gray-50">
                                <td class="px-6 py-4 text-sm font-medium text-gray-800">@user.Name</td>
                                <td class="px-6 py-4 text-sm text-gray-800">@user.Email</td>
                                <td class="px-6 py-4 text-sm text-gray-800">@(string.IsNullOrWhiteSpace(user.ContactNumber) ? "Not provided" : user.ContactNumber)</td>
                                <td class="px-6 py-4 text-sm text-gray-800">@user.Role</td>
                                <td class="px-6 py-4 text-sm text-gray-800">@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td class="px-6 py-4 text-right text-sm font-medium">
                                    <div class="flex justify-end gap-3">
                                        <button @onclick="() => NavigateToViewUser(user.Id)" class="text-[#a0522d] hover:text-[#3e2c24]" title="View">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </button>
                                        <button @onclick="() => NavigateToEditUser(user.Id)" class="text-[#a0522d] hover:text-[#3e2c24]" title="Edit">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M9 13l6-6 3 3-6 6H9v-3z" />
                                            </svg>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="animate-slide-up space-y-4 sm:hidden">
            @if (users == null)
            {
                <div class="rounded-lg bg-white p-4 text-center text-sm text-gray-800 shadow-md">Loading...</div>
            }
            else if (!users.Any())
            {
                <div class="rounded-lg bg-white p-4 text-center text-sm text-gray-800 shadow-md">No users found.</div>
            }
            else
            {
                @foreach (var user in users)
                {
                    <div class="rounded-lg border-l-4 border-[#a0522d] bg-white p-4 shadow-md transition-shadow hover:shadow-lg">
                        <div class="min-w-0 flex-1">
                            <p class="truncate text-lg font-bold text-gray-900">@user.Name</p>
                            <p class="text-sm text-gray-500">@user.Email | Role: @user.Role</p>
                            <p class="mt-1 text-sm text-gray-500">Joined: @user.CreatedAt.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="mt-4 flex justify-between border-t border-gray-100 pt-3">
                            <button @onclick="() => NavigateToViewUser(user.Id)" class="flex items-center text-[#a0522d] hover:text-[#3e2c24] text-sm font-medium" title="View">
                                <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                                View
                            </button>
                            <button @onclick="() => NavigateToEditUser(user.Id)" class="flex items-center text-[#a0522d] hover:text-[#3e2c24] text-sm font-medium" title="Edit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M9 13l6-6 3 3-6 6H9v-3z" />
                                </svg>
                                Edit
                            </button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    .animate-slide-up {
        animation: slideUp 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>

@code {
    private List<UserSummaryDto> users = null;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            var result = await UserService.GetAllUsersAsync();
            if (result.IsSuccess)
            {
                users = result.Data;
            }
            else
            {
                errorMessage = result.Error;
                users = new List<UserSummaryDto>();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load users: {ex.Message}";
            users = new List<UserSummaryDto>();
        }
        StateHasChanged();
    }

    private void NavigateToViewUser(Guid userId)
    {
        NavigationManager.NavigateTo($"/users/{userId}");
    }

    private void NavigateToEditUser(Guid userId)
    {
        NavigationManager.NavigateTo($"/users/{userId}/edit");
    }
}